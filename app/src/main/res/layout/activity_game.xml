<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="30dp"
        android:paddingEnd="20dp"
        android:weightSum="5">

        <TextView
            android:id="@+id/tv_monitor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#cccccc"
            android:padding="5dp"
            android:textColor="@color/gc_color_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="账户登录："
            android:textColor="@android:color/holo_red_light"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="登录" />

            <Button
                android:id="@+id/bt_logout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="登出" />


            <Button
                android:id="@+id/bt_feedback"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="客服" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="提现："
            android:textColor="@android:color/holo_red_light"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_withdraw_ig"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="IG金币提现" />

            <Button
                android:id="@+id/bt_withdraw_cp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="游戏金币提现" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="广告："
                android:textColor="@android:color/holo_red_light"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="请在每个调用广告的地方定义一个场景标识index"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <Button
                    android:id="@+id/bt_video_ad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="激励视频" />

                <EditText
                    android:id="@+id/et_video"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="请输入激励视频场景index"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/bt_interaction_ad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="插屏广告" />

                <EditText
                    android:id="@+id/et_interaction"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="请输入插屏场景index"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_feed_ad_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="↓↓↓信息流（横视频，竖视频，图文，大图，文字链，组图)/banner广告/拉活次留广告/聚合广告"
            android:textColor="@android:color/black" />

        <FrameLayout
            android:id="@+id/view_ad_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_feed_ad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="信息流广告"
                android:textSize="10dp" />

            <Button
                android:id="@+id/bt_banner_ad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="banner广告"
                android:textSize="10dp" />

            <Button
                android:id="@+id/bt_pl_ad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="拉活次留广告"
                android:textSize="10dp" />

            <Button
                android:id="@+id/bt_aggregate_ad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="聚合广告"
                android:textSize="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_feed_ad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="信息流广告index"
                android:textSize="10dp" />

            <EditText
                android:id="@+id/et_banner_ad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="banner广告idnex"
                android:textSize="10dp" />

            <EditText
                android:id="@+id/et_pl_ad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="拉活次留广告index"
                android:textSize="10dp" />

            <EditText
                android:id="@+id/et_aggregate_ad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="聚合广告index"
                android:textSize="10dp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="注意：拉活次留，聚合广告的index由cp接入方定义好，然后给sdk同学配置对应的广告。demo这里已经配置好，无需更改"
            android:textColor="@android:color/holo_red_light" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/view_small_video_ad_container"
                android:layout_width="200dp"
                android:layout_height="350dp"
                android:background="#80000000" />

            <Button
                android:id="@+id/bt_small_video_ad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/view_small_video_ad_container"
                android:text="小视频广告" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bt_small_video_ad"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/view_small_video_ad_container"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:text="小视频视频控制：" />

                <Button
                    android:id="@+id/bt_small_video_ad_stop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="小视频stop"
                    android:textSize="10dp" />

                <Button
                    android:id="@+id/bt_small_video_ad_pause"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="小视频pause"
                    android:textSize="10dp" />

                <Button
                    android:id="@+id/bt_small_video_ad_resume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="小视频resume"
                    android:textSize="10dp" />

                <Button
                    android:id="@+id/bt_small_video_ad_recycle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="小视频recycle"
                    android:textSize="10dp" />
            </LinearLayout>
        </RelativeLayout>

        <Button
            android:id="@+id/bt_interactive_page_ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="互动广告（跳到H5落地页）" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="数据采集上报："
            android:textColor="@android:color/holo_red_light"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_uploadInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="数据采集" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="小额提现："
            android:textColor="@android:color/holo_red_light"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/switch_smallAmountWithdraw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:checked="true" />

            <Button
                android:id="@+id/bt_smallAmountWithdraw"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="小额提现" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="额外激励活动："
            android:textColor="@android:color/holo_red_light"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/switch_float_reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:checked="true" />

            <Button
                android:id="@+id/bt_float_reward"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="激励视频超级翻倍" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="接入游戏中心的金币体系-金币活动："
            android:textColor="@android:color/holo_red_light"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_cards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="翻卡活动-点击打开页面" />

        <Button
            android:id="@+id/bt_coupon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="提现券提现-点击打开页面" />

    </LinearLayout>
</ScrollView>